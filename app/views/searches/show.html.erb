<div class="container">
  <div class="col-md-7">
    <div class="panel">
      <div class="panel-heading text-center">
        <h2>Search Results</h2>
      </div>
      <div class="panel-body">
        <div class="row">
          <table class="table-hover col-sm-10 col-sm-offset-1" id="result-table">
            <tr>
              <th>Type of Service</th>
              <th>Distance (miles)</th>
              <th>Duration (mins)</th>
              <th>Estimated Price</th>
              <th>Availability</th>
            </tr>
            <% @data.each do |d| %>
            <tr>
              <td><%= d[:mode].capitalize %></td>
              <td><%= d[:distance] %></td>
              <td><%= d[:duration] %></td>
              <td><%= d[:price] %></td>
              <td><%= find_availability(d[:availability]) %></td>
            </tr>
            <% end %>
          </table>
        </div>
        <div class="row spacer-row">
        </div>
        <div class="row">
          <div class="col-sm-6 col-sm-offset-3">
            <h2>Search Again</h2><br>
            <%= render partial: "search_form" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-5">
      <div class="panel">
        <div class="panel-body">
          <iframe width="415" height="315" src= <%= @map_url %>
            frameborder="0" allowfullscreen>
          </iframe>
        </div>
      </div>
  </div>
</div>







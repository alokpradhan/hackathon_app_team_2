<%= form_for @search, class: "form-group" do |search_fields| %>
  <% @search.errors.full_messages.each do |msg| %>
    <%= msg %>
  <%end %>
  <%= search_fields.label :origin %>
  <%= search_fields.text_field :origin, { class: "form-control margin-bottom"} %>
  <%= search_fields.label :destination %>
  <%= search_fields.text_field :destination, { class: "form-control margin-bottom"} %>
  <%= search_fields.submit "Find!", class: "btn btn-block btn-success" %>
<% end %>
<div class="row">
  <div class="col-xs-6 col-xs-offset-3">
    <div class="panel" id ='sign-up-form'>

      <div class="panel-body">
        <%= form_for @user do |f| %>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-1">
            <%= f.label :name %>
          </div>
          <div class="col-xs-7">
            <%= f.text_field :name %><br>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-1">
            <%= f.label :email %>
          </div>
          <div class="col-xs-7">
            <%= f.email_field :email %><br>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-1">
            <%= f.label :password %>
          </div>
          <div class="col-xs-7">
            <%= f.password_field :password %><br>
          </div>
        </div>

        <br>

        <div class="row">
          <div class="col-xs-3 col-xs-offset-1">
            <%= f.label :password_confirmation %>
          </div>
          <div class="col-xs-7">
            <%= f.password_field :password_confirmation %><br>
          </div>
        </div>

        <br>

      </div>
    </div>
    <%= f.submit "Sign Up", class: 'btn btn-primary sign-up-form-button' %>
    <% end %>
  </div>
</div>